<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_Bar"
        android:background="@color/red_700"
        android:elevation="5dp"
        android:padding="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionNo"
        android:text="Exam Quiz"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    </LinearLayout>
    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:id="@+id/category_selection"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Select Category" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop1"
        android:padding="5dp"
        android:layout_alignTop="@+id/category_selection"
        android:layout_alignBottom="@+id/category_selection"
        android:layout_alignRight="@+id/category_selection"
        android:src="@drawable/drop_down"/>

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/difficulty_level"
        android:layout_below="@+id/category_selection"
        android:layout_alignRight="@+id/category_selection"
        android:layout_alignEnd="@+id/category_selection"
        android:hint="Difficult Level" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop2"
        android:padding="5dp"
        android:layout_alignTop="@+id/difficulty_level"
        android:layout_alignBottom="@+id/difficulty_level"
        android:layout_alignRight="@+id/difficulty_level"
        android:src="@drawable/drop_down"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/difficulty_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/button"
        android:text="Start"/>



</RelativeLayout>